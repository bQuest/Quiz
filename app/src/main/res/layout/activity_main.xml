<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Quiz for today"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1. Which of the following is true?"/>

    <RadioGroup
        android:id="@+id/rgmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButtonTrue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin is an official language to develop Android Apps." />

        <RadioButton
            android:id="@+id/radioButtonFalse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java is an official language to develop Android Apps." />

        <RadioButton
            android:id="@+id/radioButtonWrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swift is an official language to develop Android Apps." />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="2. Which of the following programming languages can be used to create Android apps in Android studio?"/>

    <CheckBox
        android:id="@+id/checkboxEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English" />

    <CheckBox
        android:id="@+id/checkboxKotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin" />

    <CheckBox
        android:id="@+id/checkboxJava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <TableRow>
        <Button
            android:id="@+id/button_submit"
            android:text="Submit"/>
        <Button
            android:id="@+id/button_reset"
            android:text="Reset"/>
    </TableRow>
</TableLayout>
</LinearLayout>